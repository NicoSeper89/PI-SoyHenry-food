{
    "version": 1,
    "builds": [
      {
        "src": "index.js",
        "use": "@now/node"
      }
    ],
    "routes": [
        { "src": "/recipes", "method": "GET", "dest": "/src/routes/recipes.js" },
        { "src": "/recipes/:id", "method": "GET", "dest": "/src/routes/recipes.js" },
        { "src": "/recipes", "method": "POST", "dest": "/src/routes/recipes.js" },
        { "src": "/recipes/:id", "method": "DELETE", "dest": "/src/routes/recipes.js" },
        { "src": "/diets", "method": "GET", "dest": "/src/routes/diets.js" }
      ]
  }